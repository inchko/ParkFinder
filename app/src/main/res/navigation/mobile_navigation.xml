<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_map">

    <fragment
        android:id="@+id/nav_map"
        android:name="com.inchko.parkfinder.ui.map.MapFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/nav_places"
        android:name="com.inchko.parkfinder.ui.proflie.ProfileFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_information"
        android:name="com.inchko.parkfinder.ui.information.InformationFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_information" />

    <fragment
        android:id="@+id/nav_testSettings"
        android:name="com.inchko.parkfinder.ui.settings.MenuSettings"
        android:label="@string/action_settings"
        tools:layout="@layout/settings_activity" />

    <activity
        android:id="@+id/nav_true_settings"
        android:name="com.inchko.parkfinder.ui.settings.SettingsActivity"
        android:label="@string/action_settings"/>
</navigation>